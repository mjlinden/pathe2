{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% for d in departments %}
            <div class="col-sm-4 col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="{{ path('app_department',{id:d.id}) }}">
                            {{ d.name }}
                        </a>
                        <div class="card-title mb-3">{{ d.location }}</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row">
        <a href="{{ path('app_new_department') }}">toevoegen</a>
    </div>


</div>
{% endblock %}
