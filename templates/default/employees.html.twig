{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
            {% for employee in department.employees %}
                <div class="col-sm-4 col-md-3">
                    <div class="card">
                        <div class="card-body text-center">

                            <a href="{{ path('app_order',{id:employee.id}) }}">{{ employee.fname }} {{ employee.lname }}</a>

                            <div class="card-title mb-3">{{ employee.phonenumber }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('app_default') }}">back</a>

    </div>
{% endblock %}